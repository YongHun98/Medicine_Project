        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/buttonBarcode"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#8FBC8F"
            android:text="바코드로 검색하기" />
    </LinearLayout>

